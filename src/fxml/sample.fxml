<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="dislikeList" onMouseClicked="#addDislike" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </Pane>
   </left>
   <top>
      <Label text="Select your dislikes" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Button fx:id="doneBtn" mnemonicParsing="false" onAction="#openLikes" text="Done" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
